<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

    <% for document in @getCollection('documents').toJSON(): %>
        <% if document.url != '/404' && document.extensionRendered == 'html' && document.private != true: %>
            <url>
                <loc>http://<%= @site.host %><%= document.url %></loc>
                <lastmod><%= document.momentModified.format() %></lastmod>
                <changefreq>weekly</changefreq>
            </url>
        <% end %>
    <% end %>

</urlset>