---
layout: 'default'
---

<%- @content %>

<% posts = [] %>
<% for document in @documents: %>
    <% if document.url.indexOf('/posts') == 0: %>
        <% posts.push document %>
    <% end %>
<% end %>

<% if posts.length > 0: %>
    <ul class="posts">
        <% for post in posts: %>
            <li>
                <a href="<%= post.urls[1] %>">
                    <%= post.title %>
                </a>
            </li>
        <% end %>
    </ul>
<% end %>